generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Aluno {
  id    Int    @id @default(autoincrement())
  email String? @unique
  nome  String
}

model Atividade {
 id         Int @id @default(autoincrement())
 descricao  String
 dataInicio DateTime
 dataFim    DateTime
 @@map("atividades")
}

model Fornecedor {
 id             Int @id @default(autoincrement())
 razaosocial    String?
 nomefantasia   String
 cnpj           Int
 email          String @unique
 telefone       Int
 @@map("fornecedores")
}